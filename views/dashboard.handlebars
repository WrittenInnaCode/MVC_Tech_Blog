{{#if posts.length}}
<div id="yourPosts" class="d-flex justify-content-between p-3 text-white fw-bold">
    <h2 class="mx-3">Your Posts</h2>
    <a href="/dashboard/newpost">Create New Post</a>
</div>

{{!-- User's Posts --}}
<div class="d-flex justify-content-center">
    <div class="col-md-6 post-list m-3 p-5">

        {{#each posts as |post|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
            </div>
            <div class="col-md-4">
                {{!-- <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button> --}}
                <a class="list-item flex-row justify-space-between" href="/dashboard/edit/{{post.id}}">Edit Post</a>
            </div>
        </div>
        {{/each}}
    </div>
{{else}}
<div id="yourPosts" class="d-flex justify-content-between p-3 text-white fw-bold">
    <h4 class="mx-3">You do not have any posts yet. Why don't you create one!</h4>
    <a href="/dashboard/newpost"> Create New Post</a>
</div>

    {{/if}}
</div>

<script src="/js/newPost.js"></script>