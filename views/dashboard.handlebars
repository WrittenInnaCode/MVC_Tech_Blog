{{#if posts.length}}
<div class="d-flex justify-content-between bg-success p-3 bg-opacity-50 text-white fw-bold">
    <h2 class="mx-3">Your Posts</h2>
    <a href="/dashboard/newpost">+ New Post</a>
</div>

{{!-- User's Posts --}}
<div class="d-flex justify-content-center">
    <div class="col-md-6 post-list p-5">

        {{#each posts as |post|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>

    {{/if}}
</div>

<script src="/js/dashboard.js"></script>