<div class="bg-info p-3 bg-opacity-50 text-white fw-bold">
    <h2 class="mx-3">Comments</h2>
</div>


<div class="p-5" id="post-card">
    <div class="card shadow mb-5">
        <h4 class="card-header bg-info text-white">{{title}}</h4>
        <p class="card-text m-3">{{post_content}}</p>
        <div class="bg-info bg-opacity-50">
            <div class="d-flex justify-content-end">
                <div class="fw-bold text-white ms-4">{{user.username}}</div>
                <div class="fw-bold text-white ms-4">{{format_date date_created}}</div>
            </div>
        </div>
    </div>
</div>


